{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@ct/*":[
        "src/components/templates/*"
      ],
      "@cg/*": [
        "src/components/global/*"
      ],
      "@ce/*": [
        "src/components/pages/*"
      ],
      "@cu/*": [
        "src/components/util/*"
      ]
    },
    "target": "es6",
    "module": "esnext"
  },
  "include": [
    "src/**/*"
  ]
}